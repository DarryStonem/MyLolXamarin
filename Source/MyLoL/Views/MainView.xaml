<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             BackgroundColor="Aqua"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MyLoL.Views.MainView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Margin="15,0">
            <Entry Text="{Binding Summoner, Mode=TwoWay}" Keyboard="Plain" />
            <Button Text="Search Summoner" Command="{Binding GetSummonerCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>